    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="visible" >
        <Button
            android:id="@+id/btnMenuCamera"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_blue_default"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="@color/colorOff"
            android:textStyle="bold"
            android:text="@string/string_button_camera" />
        <Button
            android:id="@+id/btnDoorOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_margin="0dp"
            android:layout_gravity="center"
            android:background="@drawable/key_play_hover" />
        <Button
            android:id="@+id/btnMenuSetting"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_gray_default"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="@color/colorOff"
            android:textStyle="bold"
            android:text="@string/string_button_setting" />

    </LinearLayout>

</LinearLayout>
